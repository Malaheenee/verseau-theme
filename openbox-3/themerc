#
# Main color active: #50a5ff
# Main color inactive: #eeeeee
# Text color active: #333333
# Text color inactive: #999999
# Image color enabled: #333333
# Image color disabled: #bbbbbb


##### General #####
border.width: 1
border.color: #50a5ff
padding.width: 3
padding.height: 2

##### Menu #####

# General #
menu.border.width: 1
menu.border.color: #50a5ff
menu.overlap.x: 1
menu.overlap.y: 1

# Title #
menu.title.bg: flat solid 
menu.title.bg.color: #50a5ff
menu.title.text.color:#333333
menu.title.text.font: shadow=n
menu.title.text.justify: center

# Separators #
menu.separator.width: 1
menu.separator.color: #50a5ff
menu.separator.padding.width: 4
menu.separator.padding.height: 3

# Items #
menu.items.bg: flat solid
menu.items.bg.color: #eeeeee
menu.items.text.color: #333333
menu.items.disabled.text.color: #999999
menu.items.active.bg: flat solid
menu.items.active.bg.color: #50a5ff
menu.items.active.text.color: #eeeeee
menu.items.font: shadow=n
menu.items.justify: left


